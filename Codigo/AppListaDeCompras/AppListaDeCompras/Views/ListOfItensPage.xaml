<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaDeCompras.Views.ListOfItensPage" 
             xmlns:components="clr-namespace:AppListaDeCompras.Libraries.Components" 
             xmlns:converters="clr-namespace:AppListaDeCompras.Libraries.Converters" 
             Title="ListOfItensPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TextSharedListConverter x:Key="TextSharedListConverter" />
            <converters:TextTotalPriceOfItensInCartConverter x:Key="TextTotalPriceOfItensInCartConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid RowDefinitions="75, *, 1, 75">
        <StackLayout Padding="10" Orientation="Horizontal">
            <ImageButton HeightRequest="37" Source="back.png" />
            <Entry Margin="15,0,0,0" HorizontalOptions="FillAndExpand" Placeholder="Pesquisar" />
        </StackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding ListToBuy}">
            <CollectionView.Header>
                <components:HorizontalLine Grid.ColumnSpan="3" Stroke="Gray" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="90, *, 80" RowDefinitions="Auto, 1, 30, 1">

                        <Image Grid.Row="0" Margin="15,10,0,10" HeightRequest="64" Source="my_list.png" />
                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                            <Label Style="{StaticResource Paragraph}" Text="{Binding Name}" />
                            <HorizontalStackLayout>
                                <Label Style="{StaticResource SmallText}" Text="{Binding Products.Count}" />
                                <Label Style="{StaticResource SmallText}" Text=" itens" />
                                <Label Style="{StaticResource SmallTextEmphasis}" Text="{Binding Users.Count, Converter={StaticResource TextSharedListConverter}}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding ., Converter={StaticResource TextTotalPriceOfItensInCartConverter}}" VerticalOptions="Center" />
                        <components:HorizontalLine Grid.Row="1" Grid.ColumnSpan="3" Stroke="LightGray" />

                        <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="3">
                            <Button ImageSource="share.png" Style="{StaticResource ButtonBorderless}" Text="Compartilhar" Command="{Binding OpenPopupSharePageCommand, Source={x:Reference vm}}" CommandParameter="{Binding .}" />
                            <Button ImageSource="delete.png" Style="{StaticResource ButtonBorderless}" Text="Excluir" />
                        </HorizontalStackLayout>

                        <components:HorizontalLine Grid.Row="3" Grid.ColumnSpan="3" Stroke="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label HorizontalOptions="CenterAndExpand" Style="{StaticResource Paragraph}" Text="Nenhuma lista de compras" VerticalOptions="CenterAndExpand" />
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="1" Margin="20" HorizontalOptions="End" Text="+" VerticalOptions="End" />

        <components:HorizontalLine Grid.Row="2" Stroke="LightGray" />

        <Grid Grid.Row="3" ColumnDefinitions="*,*,*">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Lista (0 itens)" />
                <Label Text="Falta 0 item" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Carrinho " />
                <Label Text="0 itens" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2">
                <Label Text="Total" />
                <Label Text="R$ 0,00" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>